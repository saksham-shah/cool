extract Console

num = 27
counter highest

print("Collatz pattern for " + num)

print(num)

while num != 1 {
    if (num % 2) {
        num = 3 * num + 1
    } else {
        num /= 2
    }
    print(num)
    counter += 1

    if num > highest highest = num
}

print("Number of steps: " + counter)
print("Highest reached: " + highest)